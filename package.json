{
  "name": "electron-timetable",
  "productName": "Electron Timetable",
  "version": "2.0.0",
  "description": "Timetable application",
  "license": "MIT",
  "author": "Willyb321",
  "repository": {
    "type": "git",
    "url": "https://github.com/willyb321/electron-menubar-timetable"
  },
  "bugs": {
    "url": "https://github.com/willyb321/electron-menubar-timetable/issues"
  },
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "npm run lint",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "release": "build -m"
  },
  "devDependencies": {
    "electron": "^1.6.7",
    "electron-builder": "^19.54.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "about-window": "^1.8.0",
    "ajv": "^6.0.1",
    "electron-collection": "^1.2.0",
    "electron-config": "^1.0.0",
    "electron-unhandled": "^1.0.0",
    "electron-window-state": "^4.1.1",
    "is-electron-renderer": "^2.0.1",
    "moment": "^2.20.1"
  },
  "xo": {
    "ignores": [
      "test.js"
    ]
  },
  "build": {
    "electronCompile": false,
    "nodeGypRebuild": false,
    "appId": "com.willyb321.electron-timetable",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.reference",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "Utility",
      "maintainer": "Willyb321",
      "synopsis": "Timetable application",
      "target": [
        "AppImage"
      ],
      "publish": [
        "github"
      ]
    }
  }
}
